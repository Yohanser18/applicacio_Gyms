@model GYMS_TR.Models.Categoria
@{
    ViewData["Title"] = "EditarCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditarCategoria</h1>

<form method="post" asp-action="EditarCategoria">
    <input asp-for="Id"  hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Editae Categoria</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoria</label>
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="MostrasOrden" class="form-label">Orden</label>
                    <input asp-for="MostrasOrden" class="form-control" />
                    <span asp-validation-for="MostrasOrden" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Editar</button>
                <a asp-controller="Categoria" asp-action="CategoriaIndex" class="btn btn-success">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
