@model IEnumerable<GYMS_TR.Models.TipoAplicacion>
@{
    ViewData["Title"] = "TipoAplicacionIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>TipoAplicacionIndex</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de TipoAplicacion</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TipoAplicacion" asp-action="CrearTipoAplicacion" class="btn btn-primary">
                Crear Nuevo
            </a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">

            <thead>
                <tr>
                    <th>
                        Nombre Tipo de Aplicacion
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var Items in Model)
                {
                    <tr>
                        <th width="50%">@Items.Nombre</th>
                        <th class="text-end">
                            <div class="w-auto btn-group " role="group">
                                <a asp-controller="TipoAplicacion" asp-action="EditarTipoAplicacion" asp-route-Id="@Items.Id" class="btn btn-primary mx-2">
                                    Editar
                                </a>
                                <a asp-controller="TipoAplicacion" asp-action="EliminarTipoAplicacion" asp-route-Id="@Items.Id"  class="btn btn-danger mx-2">
                                    Elimianr
                                </a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>El tipo Aplicacion no tiene datos</p>
    }


</div>

