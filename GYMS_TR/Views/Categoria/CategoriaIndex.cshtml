@model IEnumerable<GYMS_TR.Models.Categoria>
@{
    ViewData["Title"] = "CategoriaIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CategoriaIndex</h1>




    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Lista de Categoria</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Categoria" asp-action="Crearcategoria" class="btn btn-primary">
                    Crear Nuevo
                </a>
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Nombre Cateoria
                        </th>
                        <th>
                            Mostrar la Orden
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var Items in Model)
                    {
                        <tr>
                            <th width="50%">@Items.NombreCategoria</th>
                            <th width="50%">@Items.MostrasOrden</th>
                            <th class="text-center">
                                <div class="w-auto btn-group " role="group">
                                    <a asp-controller="Categoria" asp-action="EditarCategoria" asp-route-Id="@Items.Id" class="btn btn-primary mx-2">
                                        Editar
                                    </a>
                                    <a asp-controller="Categoria" asp-action="EliminarCategoria" asp-route-Id="@Items.Id" class="btn btn-danger mx-2">
                                        Eliminar
                                    </a>
                                </div>
                            </th>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <p>La categoria no tiene datos </p>
        }

    </div>



