@model IEnumerable<GYMS_TR.Models.Producto>
@{
    ViewData["Title"] = "ProductoIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductoIndex</h1>

<div  class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Producto</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="UpsertProducto" class="btn btn-primary">
                Crear Nuevo
            </a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre producto
                    </th>
                    <th>
                        Precio del producto
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                       Tipo Apliacion
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var Items in Model)
                {
                    <tr>
                        <th>@Items.NombreProducto</th>
                        <th>@Items.Precio</th>
                        <th>@Items.Categoria.NombreCategoria</th>
                        <th>@Items.TipoAplicacion.Nombre</th>
                        <th class="text-center">
                            <div class="w-auto btn-group" role="group">
                                <a asp-controller="Producto" asp-action="UpsertProducto" asp-route-Id="@Items.Id" class="btn btn-primary mx-2">
                                    editar 
                                </a>
                                <a asp-controller="Producto" asp-action="EliminarProducto" asp-route-Id="@Items.Id" class="btn btn-danger mx-2">
                                    Eliminar
                                </a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    } 
    else
    {
      <p>El produto no tiene datos</p>
    }
</div>

